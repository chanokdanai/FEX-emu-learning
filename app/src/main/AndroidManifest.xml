<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for Steam API -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Storage permissions for game downloads and saves -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />
    
    <!-- Note: MANAGE_EXTERNAL_STORAGE is used for storing large game files.
         For Google Play distribution, consider using scoped storage or
         REQUEST_INSTALL_PACKAGES for APK-based distribution -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    
    <!-- Foreground service for downloads -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FEXSteamLauncher"
        tools:targetApi="31">
        
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FEXSteamLauncher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.SteamLoginActivity"
            android:exported="false"
            android:theme="@style/Theme.FEXSteamLauncher" />
        
        <activity
            android:name=".ui.GameDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.FEXSteamLauncher" />
        
        <activity
            android:name=".ui.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.FEXSteamLauncher" />
        
        <!-- Download service -->
        <service
            android:name=".steam.DownloadService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
        
        <!-- Cloud save sync service -->
        <service
            android:name=".cloud.CloudSyncService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
            
    </application>

</manifest>
